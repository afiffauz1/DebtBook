<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/EdEmail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="200dp"
                android:layout_gravity="center_horizontal"
                android:hint="E-mail"
                android:paddingLeft="20dp"
                android:background="@drawable/button_overlay_pink"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:inputType="textEmailAddress"
                />
            <EditText
                android:id="@+id/EdUsername"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:hint="Username"
                android:paddingLeft="20dp"
                android:background="@drawable/button_overlay_pink"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@id/EdEmail"
                />
            <EditText
                android:id="@+id/EdFullname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:hint="Fullname"
                android:paddingLeft="20dp"
                android:background="@drawable/button_overlay_pink"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@id/EdUsername"
                />
            <EditText
                android:id="@+id/EdPhone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:hint="Phone"
                android:paddingLeft="20dp"
                android:background="@drawable/button_overlay_pink"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@id/EdFullname"
                android:inputType="phone"
                />
            <EditText
                android:id="@+id/EdPassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:hint="Password"
                android:paddingLeft="20dp"
                android:background="@drawable/button_overlay_pink"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@id/EdPhone"
                android:inputType="textPassword"
                />
            <EditText
                android:id="@+id/EdRePassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:hint="Re-type Password"
                android:paddingLeft="20dp"
                android:background="@drawable/button_overlay_pink"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@id/EdPassword"
                android:inputType="textPassword"
                />
            <Button
                android:id="@+id/btnSubmitReg"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:text="REGISTER"
                android:textColor="#fff"
                android:layout_below="@id/EdRePassword"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_solid_pink"
                />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>